{% extends 'base.html.twig' %}

{% block title %}Home :: CookiesAndBooks{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if app.user %}
        <h1 class="mb-3">Salut {{ app.user.username }} !</h1>

    {% else %}
        <h1 class="mb-3">Bienvenue sur mon site</h1>
    {% endif %}

    {% for user in users %}
        <p><a href="{{path('user_profile', {'username': user.username})}}">{{user.username}}</a></p>
    {% endfor %}




</div>
{% endblock %}
